  </div>
  

<div class="container mt-5">
    <div class="row">
        <!-- 총 사용자 수 카드 -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title">Total Users</h3>
                    <p class="card-text"><%= totalUsers %></p>
                </div>
            </div>
        </div>
        <!-- 총 피드백 수 카드 -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title">Total Feedbacks</h3>
                    <p class="card-text"><%= totalFeedbacks %></p>
                </div>
            </div>
        </div>
        <!-- 평균 별점 카드 -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title">Average Rating</h3>
                    <div class="card-text" id="rating">
                        <% for (let i = 1; i <= 5; i++) { %>
                            <i class="fa-star <%= i <= Math.round(averageRating) ? 'fas' : 'far' %>"></i>
                        <% } %>
                        (<%= averageRating %>)
                    </div>
                </div>
            </div>
        </div>
        <!-- 총 알약 수 카드 -->
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title">Total Pills</h3>
                    <p class="card-text"><%= totalPills %></p>
                </div>
            </div>
        </div>
    </div>
    <!-- 사용자 통계 및 피드백 분포도 -->
    <div class="container mt-5">
        <div class="row">
            <!-- 사용자 연령대 분포 차트 -->
            <div class="col-md-6">
                <div class="card" style="margin-top: 20%">
                    <div class="card-body">
                        <h3 class="text-center">User Age Distribution</h3>
                        <canvas id="ageDistributionChart"></canvas>
                    </div>
                </div>
            </div>
            <!-- 피드백 통계 차트 -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center">Feedback Rating Distribution</h3>
                        <canvas id="feedbackStatsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <hr>
</div>


